# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8081

# Database Configuration
# For local development, use localhost
# For production, use your cloud database URL
DATA_SOURCE_URL=jdbc:postgresql://localhost:5432/yourdb
DATA_SOURCE_USER=postgres
DATA_SOURCE_PASSWORD=yourpassword

# Frontend Configuration
# For local development: http://localhost:3000
# For production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:3000

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JPA/Hibernate Configuration (optional overrides)
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Logging Configuration (optional)
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SQL=INFO

# Connection Pool Settings (optional overrides)
DB_POOL_MAX_SIZE=5
DB_POOL_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000